def fibonacci(n):
    if n <= 1:
        return n
    else:
        return fibonacci(n-1) + fibonacci(n-2)

def print_fibonacci_series(n):
    if n <= 0:
        print("Invalid input. Please provide a positive integer.")
    else:
        print("Fibonacci Series:")
        for i in range(n):
            print(fibonacci(i), end=" ")

# Example usage:
n_terms = 10
print_fibonacci_series(n_terms)
